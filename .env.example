# Amazing Marvin Remote MCP Environment Variables
# Copy this file to .env and fill in your values

# Your Amazing Marvin API key (get from Amazing Marvin → Settings → API)
AMAZING_MARVIN_API_KEY=your_api_key_here

# OAuth secrets (generate random UUIDs)
OAUTH_CLIENT_SECRET=generate_random_uuid_here
JWT_SECRET=generate_random_jwt_secret_here

# Optional: Debug mode
DEBUG_MODE=false

# CouchDB 連線設定 (用於 Event/Time Block 功能)
# 從 Amazing Marvin → Settings → API → Database Sync 取得
MARVIN_SYNC_SERVER=https://your-couch-server.com
MARVIN_SYNC_DATABASE=userdb-xxxxxxxxx
MARVIN_SYNC_USER=your_sync_user
MARVIN_SYNC_PASSWORD=your_sync_password

# Note: These should be set as Wrangler secrets in production:
# wrangler secret put AMAZING_MARVIN_API_KEY
# wrangler secret put OAUTH_CLIENT_SECRET
# wrangler secret put JWT_SECRET
# wrangler secret put MARVIN_SYNC_SERVER
# wrangler secret put MARVIN_SYNC_DATABASE
# wrangler secret put MARVIN_SYNC_USER
# wrangler secret put MARVIN_SYNC_PASSWORD